{
  "name": "bmore",
  "version": "1.0.0",
  "private": true,
  "description": "Bmore - Multilingual Immigration Assistant Suite",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "docker:up": "docker compose -f infra/docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f infra/docker/docker-compose.yml down",
    "docker:logs": "docker compose -f infra/docker/docker-compose.yml logs -f",
    "ocr:up": "docker compose -f apps/ocr/docker-compose.ocr.yml up -d",
    "ocr:down": "docker compose -f apps/ocr/docker-compose.ocr.yml down",
    "ocr:logs": "docker compose -f apps/ocr/docker-compose.ocr.yml logs -f",
    "db:migrate": "cd infra/db && npx prisma migrate deploy",
    "db:studio": "cd infra/db && npx prisma studio"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0"
  }
}